<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentBackstory">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/background_main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_margin="10sp"
                android:orientation="horizontal"
                android:weightSum="1">
                <EditText
                    android:id="@+id/nameField"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:hint="Имя персонажа"
                    android:textColor="@color/black"
                    android:importantForAutofill="no"
                    android:inputType="text" />
                <ImageView
                    android:id="@+id/roll_random"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_weight="0.1"
                    android:gravity="top"
                    android:src="@drawable/random_icon" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/name"
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_margin="10sp"
                android:orientation="horizontal"
                android:weightSum="1">
                <EditText
                    android:id="@+id/ageField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textColor="@color/black"
                    android:hint="Возраст"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/age"
                android:layout_alignEnd="@id/race"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp" />

            <Spinner
                android:id="@+id/race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp" />
            <RelativeLayout
                android:layout_below="@id/race"
                android:id="@+id/home_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <Spinner
                    android:id="@+id/region_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/roll_region"
                    />
                <ImageView
                    android:id="@+id/roll_region"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/dice_icon"
                    android:layout_alignParentEnd="true"
                    android:onClick="RandomizeOrigin"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/home_region"
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <Spinner
                    android:id="@+id/home_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/roll_home"
                    android:layout_alignParentStart="true"
                    />
                <ImageView
                    android:id="@+id/roll_home"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/dice_icon"
                    android:layout_alignParentEnd="true"
                    android:onClick="RandomizeOrigin"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/family_status"
                android:layout_below="@id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <Spinner
                    android:id="@+id/family_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/roll_family_status"
                    android:layout_alignParentStart="true"
                    />
                <ImageView
                    android:id="@+id/roll_family_status"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/dice_icon"
                    android:layout_alignParentEnd="true"
                    android:onClick="RandomizeOrigin"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/back_to_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:layout_weight="0.5"
                android:text="Назад"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/to_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5sp"
                android:layout_weight="0.5"
                android:text="Далее"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>