<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentStats">

    <LinearLayout
        android:id="@+id/stats_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:weightSum="1">
            <TextView
                android:id="@+id/improvement_points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:text="Очки улучшения:" />
            <ImageView
                android:id="@+id/roll_stats"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_toEndOf="@id/improvement_points_text"
                android:layout_marginStart="5sp"
                android:layout_centerVertical="true"
                android:src="@drawable/dice_icon"
                android:visibility="gone" />

            <EditText
                android:id="@+id/improvement_points"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/improvement_points_text"
                android:layout_marginStart="5sp"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:inputType="number|numberDecimal"
                android:textColor="@color/black"
                android:maxLength="3"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/stats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/stats_view"
        android:paddingBottom="40sp"
        android:weightSum="1">

        <ListView
            android:id="@+id/stats_main_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="7sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="7sp"
            android:layout_marginBottom="15sp"
            android:layout_weight="0.5"
            android:nestedScrollingEnabled="false"
            android:divider="@color/black"
            android:dividerHeight="1sp" />
        <ListView
            android:id="@+id/stats_additional_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="7sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="7sp"
            android:layout_marginBottom="15sp"
            android:layout_weight="0.5"
            android:nestedScrollingEnabled="false"
            android:divider="@color/black"
            android:dividerHeight="1sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/move_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:id="@+id/back_to_backstory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:layout_weight="0.5"
            android:text="Назад"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/to_abilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:layout_weight="0.5"
            android:text="Далее"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>